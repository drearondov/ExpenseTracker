#:import hex kivy.utils.get_color_from_hex

<Label>
    font_name: 'assets/fonts/Roboto-Regular.ttf'
    color: hex('#333333')

<WelcomeScreen>:

    FloatLayout:

        canvas:
            Color:
                rgba: hex('#FDFDFD')
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation: "vertical"
            padding: [24, 48]
            pos_hint: {"x": 0.15}

            Label:
                text: "moneyBox"
                text_size: self.size
                font_size: ('48sp')
                font_name: 'assets/fonts/BalooBhai2-Bold.ttf'
                halign: 'left'
                valign: "bottom"
                size_hint: 1, 0.5

            Label:
                text:
                    'your wallet is not\na rabbit hole'
                text_size: self.size
                font_size: ('14sp')
                font_name: 'assets/fonts/Roboto-Regular.ttf'
                halign: 'left'
                valign: 'top'
                line_height: 0.8
                size_hint: 1, 0.5

        Image:
            source: 'assets/img/Scribble.png'
            pos_hint: {"x": -0.025, "y": 0.02}

        BoxLayout:
            orientation: "horizontal"
            padding: 36, 0
            spacing: 36
            size_hint: 1, 0.3
            pos_hint: {"y": 0.05}

            RoundedButton:
                back_color: hex('#333333')
                color: hex('#FDFDFD')
                border_radius: [28]
                text: "log in"
                font_size: ('14sp')
                font_name: 'assets/fonts/BalooBhai2-Bold.ttf'
                size_hint: 0.32, 0.15
                pos_hint: {'right': 1}
                on_press: root.manager.current = 'login_screen'

            RoundedButton:
                back_color: hex('#333333')
                color: hex('#FDFDFD')
                border_radius: [28]
                text: "sign up"
                font_size: ('14sp')
                font_name: 'assets/fonts/BalooBhai2-Bold.ttf'
                size_hint: 0.32, 0.15
                pos_hint: {'right': 1}
                on_press: root.manager.current = 'signup_screen'
