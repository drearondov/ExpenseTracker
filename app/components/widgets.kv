<RoundedButton@Button>
    background_color: (0, 0, 0, 0)
    back_color: (1, 0, 1, 1)
    border_radius: None
    canvas.before:
        Color:
            rgba: self.back_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [16, 16, 16, 16] if self.border_radius is None else self.border_radius

<BorderedButton@Button>
    canvas:
        Color:
            rgba: hex('#333333')
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], 24, 100)
            width: 1.5

<BorderedToggle@ToggleButton>
    canvas:
        Color:
            rgba: hex('#333333')
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], 24, 100)
            width: 1.8

    background_normal: ''
    background_down: 'assets/img/select_square.jpg'

<ImageButton@ButtonBehavior+Image>
    source: None

<InputField@BoxLayout>
    orientation: "vertical"
    padding: 12

    canvas:
        Color:
            rgba: hex('#333333')
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], 32, 100)
            width: 1.2

<BottomBorder@Widget>
    border_color: (1, 1, 1, 1)
    canvas.before:
        Color:
            rgba: root.border_color
        Line:
            points:(self.pos[0], self.pos[1], 1.1*self.size[0], self.pos[1])
            width: 1.2

<BorderedLabel@Label+BottomBorder>
    border_color: hex("#333333")
    halign: 'left'
    font_name: 'assets/fonts/BalooBhai2-Bold.ttf'
    font_size: ('16sp')
    text_size: self.size
    padding: [8, 0]

<CategorySelector@BoxLayout+ToggleButton>
    orientation: 'vertical'
    background_normal: ''
    background_down: 'assets/img/select_square.jpg'

    Image:
        allow_strech: True

    Label:
        font_name: 'assets/fonts/Roboto-Regular.ttf'
        font_size: ('10sp')
        text_size: self.size
        halign: 'center'
        valign:'top'
        size_hint: 1, 1
